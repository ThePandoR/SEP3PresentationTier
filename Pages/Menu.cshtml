@page "/menu"
@model SEP3PresentationTier.Pages.Menu

<div class="row justify-content-center">
  <div class="col-6">
    <ul class="list-group">
      @foreach (var p in Model.Products)
      {
        <li class="list-group-item d-flex justify-content-between align-items-center">
          @p.name
          <span class="badge badge-primary badge-pill">@p.price</span>
        </li>

      }
      </ul>
    </div>
</div>